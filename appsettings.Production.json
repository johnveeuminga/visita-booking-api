{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "Secret": "REPLACE_WITH_SECURE_SECRET_IN_DOCKER_COMPOSE",
    "Issuer": "visita-booking-api",
    "Audience": "visita-booking-users",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 30
  },
  "ConnectionStrings": {
    "DefaultConnection": "REPLACED_BY_DOCKER_ENVIRONMENT_VARIABLE",
    "RedisConnection": "REPLACED_BY_DOCKER_ENVIRONMENT_VARIABLE"
  },
  "Google": {
    "ClientId": "REPLACE_WITH_YOUR_GOOGLE_CLIENT_ID"
  },
  "Caching": {
    "UseMemoryCache": false,
    "UseRedis": true,
    "UseResponseCaching": true,
    "DefaultTTLMinutes": 15,
    "SearchResultsTTLMinutes": 5,
    "RoomDetailsTTLMinutes": 120,
    "AvailabilityTTLMinutes": 10,
    "AmenitiesTTLHours": 24,
    "MaxMemoryCacheSizeMB": 200,
    "Redis": {
      "KeyPrefix": "visita:prod:",
      "Database": 0,
      "ConnectRetry": 5,
      "ConnectTimeoutMs": 10000
    }
  },
  "RoomManagement": {
    "PhotoUpload": {
      "GenerateThumbnails": true,
      "MaxFileSizeMB": 10
    },
    "Calendar": {
      "MaxAdvanceBookingDays": 365
    }
  },
  "AWS": {
    "Region": "ap-southeast-1",
    "S3": {
      "BucketName": "baguio-visita",
      "MaxFileSizeMB": 10,
      "AllowedFileTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"]
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:8080"
      }
    }
  }
}
