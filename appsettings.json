{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "Secret": "your-256-bit-secret-key-here-make-sure-its-long-enough",
    "Issuer": "visita-booking-api",
    "Audience": "visita-booking-users",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 30
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;database=VisitaBooking;user=visitauser;password=VisitaUser123!;port=3306;",
    "RedisConnection": "localhost:6379,password=VisitaRedis123!,abortConnect=false"
  },
  "Google": {
    "ClientId": "your-google-client-id.apps.googleusercontent.com"
  },
  "Caching": {
    "UseMemoryCache": true,
    "UseRedis": false,
    "UseResponseCaching": true,
    "DefaultTTLMinutes": 10,
    "SearchResultsTTLMinutes": 3,
    "RoomDetailsTTLMinutes": 60,
    "AvailabilityTTLMinutes": 5,
    "AmenitiesTTLHours": 24,
    "MaxMemoryCacheSizeMB": 100,
    "Redis": {
      "KeyPrefix": "visita:",
      "Database": 0,
      "ConnectRetry": 3,
      "ConnectTimeoutMs": 5000
    }
  },
  "RoomManagement": {
    "MaxPhotosPerRoom": 10,
    "PhotoUpload": {
      "MaxFileSizeMB": 5,
      "AllowedExtensions": [".jpg", ".jpeg", ".png", ".webp"],
      "GenerateThumbnails": true,
      "ThumbnailSizes": [150, 300, 600, 1200]
    },
    "Calendar": {
      "MaxAdvanceBookingDays": 365,
      "MinAdvanceBookingDays": 0,
      "DefaultAvailabilityStatus": "Available"
    }
  },
  "Booking": {
    "DefaultReservationTimeoutMinutes": 30,
    "MaxReservationExtensions": 2,
    "ReservationExtensionMinutes": 15,
    "TaxRate": 0.1,
    "ServiceFeeRate": 0.05,
    "AllowSameDayBooking": true,
    "MaxAdvanceBookingDays": 365,
    "RequirePaymentForReservation": true,
    "CheckInTime": "15:00:00",
    "CheckOutTime": "11:00:00"
  },
  "Xendit": {
    "ApiKey": "your-xendit-api-key-here",
    "BaseUrl": "https://api.xendit.co",
    "WebhookVerificationToken": "your-webhook-verification-token",
    "SuccessRedirectUrl": "https://your-frontend-domain.com/booking/success",
    "FailureRedirectUrl": "https://your-frontend-domain.com/booking/failed",
    "UseProduction": false,
    "DefaultInvoiceExpiryMinutes": 30,
    "MaxRefundAmount": 10000,
    "EnableWebhookValidation": true
  }
}
